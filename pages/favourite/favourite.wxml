<page>
 

<view class='shop-container'>
  <view wx:for="{{favorites}}" >
    <view  class='featured-container' bindlongtap='Delete'>
      <view bindtap='previewImage' data-art-url="{{item.artists[0].art[0].url}}" class="big-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('{{item.artists[0].art[0].url}}');"> 
        <!-- <view class='shop-name'>{{item.name}} </view> -->
          <image  catchtap='showArtist'class='shop-logo-avatar' src="{{item.artists[0].avatar_url}}"></image>
        <!-- <view>{{art.artist.name}}</view> -->
           <image catchtap='showShop' class='shop-logo-avatar' src="{{item.logo_url}}"></image> 
        </view>
      </view> 
      <view class='blank-item'> </view>
    </view>
</view>

<!-- START TAB BAR -->

<view class='nav'>
  <view class='markey-container'>
      <view class='extend-padding' bindtap='goBrowse'>
      <image class='avatar-tab' src="../../image/search.png"></image>
      </view>
      <view class='extend-padding' bindtap='goFavourite'>
      <image class='avatar-tab' src="../../image/star.png"></image>
      </view>
      <view class='extend-padding' bindtap='goInbox'>
      <image class='avatar-tab' src="../../image/chat.png"></image>
      </view>
      <view class='extend-padding' bindtap='goInfo'>
      <image class='avatar-tab' src="../../image/information.png"></image>
      </view>
  </view>
</view>


<!-- END TAB BAR -->


<!-- END CARD LOOP -->
 
</page>