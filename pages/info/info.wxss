/* START SHOP-CARD */

.shop-container {
  border-radius: 1px;
  background: black;
}

.shop-info {
  display: flex;
  justify-content: space-between;
  background: linear-gradient(to right, #262626, #A3A0A0);
  border-radius: 3px;
}

.featured-container {
  padding-top: 3rpx;
  margin-bottom: 1px;
}
.shop-name {
  font-size: 20px;
  font-weight: bolder;
  color: whitesmoke;
  text-shadow: 1px 1px 2px black;
  margin: 8px;
} 

.shop-logo {
  border-radius: 50%;
  width: 60px;
  height: 60px;
}

.big-card {
  height: 100px;
  width: 500px;
  color: white;
  transform: rotate(10deg);
  padding: 10px;
  font-weight: bold;

}



/* END SHOP-CARD  */



.avatar {
  width: 18px;
  height: 18px;
  border-radius: 50%;
  margin-top: 1px;
}



 /* START TAB BAR  */

 .icon-back {
  width: 30px;
  height: 30px;
  opacity: 0.5;
}

.avatar-tab {
  width: 22px;
  height: 22px;
  margin-left: 5px;
  margin-top: 5px;
}

.nav {
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: #fff;
  overflow: hidden;
  height: 45px;
  border-top: 0.5px solid #dddddd;
}

.markey-container {
  display: flex;
  justify-content: space-around;
}

.extend-padding {
  padding-left: 20px;
  padding-right: 20px;
}

