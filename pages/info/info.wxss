/* START SHOP-CARD */

.shop-container {
  border-radius: 1px;
  background: black;
}

.shop-info {
  display: flex;
  justify-content: space-between;
  background: linear-gradient(to right, #262626, #A3A0A0);
  border-radius: 3px;
}

.language-switcher-flex {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.language-switcher {
  display: flex;
  align-items: center;
}
.featured-container {
  padding-top: 3rpx;
  margin-bottom: 1px;
}
.shop-name {
  font-size: 20px;
  font-weight: bolder;
  color: whitesmoke;
  text-shadow: 1px 1px 2px black;
  margin: 8px;
} 

.shop-logo {
  border-radius: 50%;
  width: 60px;
  height: 60px;
}

.big-card {
  height: 200rpx;
  width: 900rpx;
  color: white;
  transform: rotate(0deg);
  padding: 10px;
  border-top: 1px solid rgba(255,255,255,0.6);
  border-bottom: 1px solid rgba(255,255,255,0.6);
  margin-top: 3rpx;
  margin-right: 8rpx;
  margin-bottom: 7rpx;
  background-color: #bf2a32;
  text-shadow: 1px 1px rgba(0,0,0,0.6)

}

.big-card.card-one {
  /* text-decoration: underline; */
  height: 120rpx;
  padding-left: 40rpx;
  font-weight: bolder;
  letter-spacing: 2px;
  font-size: 150rpx;
  transform: rotate(0deg);
  margin-top: -13px;
  margin-bottom: 20rpx;
  border: 3px solid rgba(100,100,100,0.9);
}

.info-one {
  text-decoration: none;
  font-size: 52rpx;
  margin-top: -5rpx;
  /* margin-left: 10rpx;
  margin-bottom: 12rpx; */
}

.info-two {
  font-size: 35rpx;
  margin-left: 135rpx;
  margin-top: 0rpx;
}

.empty {
  margin-top: 3vh;
  margin-bottom: 3vh;
  content: none;
}


/* END SHOP-CARD  */



.avatar {
  width: 18px;
  height: 18px;
  border-radius: 50%;
  margin-top: 1px;
}



 
