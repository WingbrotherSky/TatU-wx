/* pages/inbox/inbox.wxss */

 /* START TAB BAR  */

.avatar-tab {
  width: 22px;
  height: 22px;
  margin-left: 5px;
  margin-top: 5px;
}

.nav {
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: #fff;
  overflow: hidden;
  height: 45px;
  border-top: 0.5px solid #dddddd;
}

.markey-container {
  display: flex;
  justify-content: space-around;
}

.extend-padding {
  padding-left: 20px;
  padding-right: 20px;
}

 /* END TAB BAR  */

 page {
   background-color: black;
 }

 .delete-button {
   width: 100rpx;
   height: 100rpx;
   position: absolute;
   top: 10px;
   right: 10px;
 }

 .status {
   color: white;
   background: linear-gradient(to right, #262626, #A3A0A0);
 }

 .container {
  border-radius: 1px;
  background: #F7F7F7;
  
  display: flex;
  justify-content: space-between;


}

.info {
  display: flex;
  justify-content: space-between;
  border-radius: 3px;

}


.avatar {
  border-radius: 50%;
  width: 150rpx;
  height: 150rpx;
}

button {
  right: 5px;
}