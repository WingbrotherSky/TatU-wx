/* START SHOP-CARD */

.shop-container {
  margin: 6px;
  border-radius: 1px;
  background: black;
  display: flex;
  justify-content: space-between;
  height: 205rpx;

}

.shop-info {
   display: flex;
  justify-content: space-between;
  background: black;
  border-radius: 0;


}

.featured-container {
  background: black;
}

.artist {
  display: flex;
  justify-content: space-between;
  font-size: 19px;
}

.shop-name {
  font-size: 56rpx;
  font-weight: bolder;
  color: white;
  margin: 20rpx;

}

.location {
  font-size: 12px;
  font-weight: lighter;
  color: white;
  margin: 4px;
  left: 5px;
  padding: 5px;
}

.shop-logo {
  border-radius: 50%;
  width: 85px;
  height: 85px;
  margin: 20rpx;

}

.big-card {
  height: 170px;
  width: 100%;
  background-size: cover !important;
  background-position: center;
  color: white;
  position: relative;
  margin: 0;
  margin-bottom: 0;
  padding: 20rpx;
  font-weight: bolder;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}

.small-cards {
  display: flex;
  justify-content: space-around;
   flex-wrap: wrap;
  background-color: black;
  margin-bottom: 16rpx;
}

.small-card {
  height: 250rpx;
  width: 250rpx;
  background-size: cover;
}

.blank-item {
  height: 10px;
  background-color: black;
}


/* END SHOP-CARD  */


.card-user {
  position: absolute;
  right: 10px;
  top: 10px;
  width: 40px;
  border-radius: 50%;
}
.card-category {
  position: absolute;
  top: 10px;
  left: 10px;
  font-size: 15px;
  text-transform: uppercase;
  font-weight: bold;
}

.card-description {
  position: absolute;
  bottom: 10px;
  left: 10px;
}
.card-description h2 {
  font-size: 24px;
}
.card-description p {
  font-size: 14px;
  opacity: 0.7;
  font-weight: lighter;
}
.card-link {
  position: absolute;
  top: 0;
  bottom: 0;
  right: 0;
  width: 100%;
  z-index: 2;
  background: black;
  opacity: 0;
}

.card-link:hover {
  opacity: 0.1;
}

.avatar {
  width: 18px;
  height: 18px;
  border-radius: 50%;
  margin-top: 1px;
}


.avatar-large {
  width: 40px;
  border-radius: 50%;
}
.avatar-bordered {
  width: 20px;
  border-radius: 50%;
  box-shadow: 0 1px 2px rgba(0,0,0,0.2);
  border: white 1px solid;
}
.avatar-square {
  width: 20px;
  border-radius: 0px;
  box-shadow: 0 1px 2px rgba(0,0,0,0.2);
  border: white 1px solid;
}


 /* START TAB BAR  */

 .icon-back {
  width: 30px;
